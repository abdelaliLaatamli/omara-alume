<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: #a8dadc;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.Controllers.AccessoryController">
   <children>
      <HBox layoutX="14.0" layoutY="14.0" prefHeight="40.0" prefWidth="150.0">
         <children>
            <Button mnemonicParsing="false" onMouseClicked="#goBack" prefHeight="40.0" text="&lt;&lt;">
               <font>
                  <Font name="Segoe UI Bold" size="15.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onMouseClicked="#goHome" prefHeight="40.0" text="Accueil">
               <font>
                  <Font name="Segoe UI Bold" size="18.0" />
               </font>
            </Button>
         </children>
      </HBox>

      <TableView fx:id="tableViewOfAlumAccessories" layoutX="360.0" layoutY="11.0" prefHeight="679.0" prefWidth="830.0">
         <columns>
            <TableColumn fx:id="accessoryName" prefWidth="125.0" text="Nom d'accessoire" />
            <TableColumn fx:id="accessoryBuyPrice" prefWidth="108.0" text="Prix d'achat" />
            <TableColumn fx:id="accessoryQuantity" prefWidth="108.0" text="Quantité" />
            <TableColumn fx:id="accessoryColor" prefWidth="98.0" text="Color" />
            <TableColumn fx:id="accessoryCreationDate" minWidth="0.0" prefWidth="144.0" text="Date de Creation" />
            <TableColumn fx:id="accessorySellingPrice" prefWidth="122.0" text="Prix de vente" />
            <TableColumn fx:id="accessoryEdit" prefWidth="124.0" text="Edit Accessoire" />
         </columns>
      </TableView>

      <AnchorPane layoutX="14.0" layoutY="78.0" prefHeight="612.0" prefWidth="340.0" style="-fx-background-color: white;">
         <children>

            <Label layoutX="14.0" layoutY="14.0" prefHeight="17.0" prefWidth="127.0" text="ID :" />
            <TextField fx:id="accessoryIdForm" disable="true" layoutX="14.0" layoutY="31.0" prefHeight="25.0" prefWidth="310.0" />

            <Label layoutX="14.0" layoutY="90.0" prefHeight="17.0" prefWidth="127.0" text="Nom d'accessoire * : " />
            <TextField fx:id="accessoryNameForm" layoutX="14.0" layoutY="107.0" prefHeight="25.0" prefWidth="310.0" />

            <Label layoutX="14.0" layoutY="160.0" prefHeight="17.0" prefWidth="127.0" text="Prix d'achat : " />
            <TextField fx:id="accessoryBuyPriceForm" layoutX="14.0" layoutY="177.0" prefHeight="25.0" prefWidth="310.0" />

            <Label layoutX="14.0" layoutY="233.0" text="Quantité :" />
            <TextField fx:id="accessoryQuantityForm" layoutX="15.0" layoutY="250.0" prefHeight="25.0" prefWidth="310.0" />

            <Label layoutX="14.0" layoutY="306.0" prefHeight="17.0" prefWidth="127.0" text="Color :" />
            <ComboBox fx:id="accessoryColorForm" layoutX="14.0" layoutY="323.0" prefHeight="25.0" prefWidth="310.0" />

            <Label layoutX="14.0" layoutY="380.0" prefHeight="17.0" prefWidth="127.0" text="Prix de vente :" />
            <TextField fx:id="accessorySellPriceForm" layoutX="15.0" layoutY="397.0" prefHeight="25.0" prefWidth="310.0" />

            <Button layoutX="14.0" layoutY="462.0" mnemonicParsing="false" onMouseClicked="#saveAccessoryForm" prefHeight="25.0" prefWidth="127.0" text="Enregistrer" />


         </children>
      </AnchorPane>

   </children>
</AnchorPane>
